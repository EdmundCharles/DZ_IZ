import os
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
#Task1
df = pd.read_csv(r'./Mall_Customers.csv')

by_gender = df.groupby('Genre')['Annual Income (k$)'].mean()

#print(by_gender['Female'])

#Task2

by_expenses = df.groupby('Genre')['Spending Score (1-100)'].max()

#print(by_expenses)

#Task3

men = df[df['Genre']=='Male']
men_income = men[['Age','Annual Income (k$)']].set_index('Age')
data = men_income.sort_values('Age')

data.plot(ylabel='Annual income',xlabel='Age',title='Income depending on age for men',grid=True,color='black')
plt.show()
